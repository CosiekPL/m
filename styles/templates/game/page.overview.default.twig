<script>
// Server time update
function updateServerTime() {
    const serverTimeElement = document.getElementById('serverTime');
    if (!serverTimeElement) return;
    
    const now = new Date();
    const hours = now.getHours().toString().padStart(2, '0');
    const minutes = now.getMinutes().toString().padStart(2, '0');
    const seconds = now.getSeconds().toString().padStart(2, '0');
    
    serverTimeElement.textContent = `${hours}:${minutes}:${seconds}`;
}

// Update progress bars for building/research/shipyard
function updateProgressBars() {
    const progressElements = document.querySelectorAll('[data-end-time]');
    
    progressElements.forEach(element => {
        const endTime = parseInt(element.getAttribute('data-end-time'));
        const now = Math.floor(Date.now() / 1000);
        
        if (endTime > now) {
            const totalTime = endTime - now;
            const hours = Math.floor(totalTime / 3600);
            const minutes = Math.floor((totalTime % 3600) / 60);
            const seconds = totalTime % 60;
            
            element.textContent = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        } else {
            element.textContent = "{{ LNG.ov_complete }}";
            element.style.width = "100%";
            
            // Refresh page when a timer completes
            setTimeout(() => {
                window.location.reload();
            }, 1000);
        }
    });
}

// Fleet timers
function updateFleetTimers() {
    const fleetTimers = document.querySelectorAll('.fleet-timer');
    
    fleetTimers.forEach(timer => {
        const fleetTime = parseInt(timer.getAttribute('data-fleet-time'));
        const fleetId = timer.getAttribute('data-fleet-id');
        const now = Math.floor(Date.now() / 1000);
        
        if (fleetTime > now) {
            const totalTime = fleetTime - now;
            const hours = Math.floor(totalTime / 3600);
            const minutes = Math.floor((totalTime % 3600) / 60);
            const seconds = totalTime % 60;
            
            timer.textContent = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        } else {
            timer.textContent = "{{ LNG.ov_fleet_arrived }}";
            
            // Refresh page when a fleet arrives
            setTimeout(() => {
                window.location.reload();
            }, 1000);
        }
    });
}

// Run timers
document.addEventListener('DOMContentLoaded', function() {
    updateServerTime();
    updateProgressBars();
    updateFleetTimers();
    
    setInterval(updateServerTime, 1000);
    setInterval(updateProgressBars, 1000);
    setInterval(updateFleetTimers, 1000);
});
</script>
{% endblock %}
