                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">{{ LNG.ov_research }}</h4>
                </div>
                <div class="card-body">
                    <div class="research-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>{{ USER.b_tech_name }}</span>
                            <span class="badge bg-primary">{{ LNG.tech.level }} {{ USER.b_tech_level }}</span>
                        </div>
                        <div class="progress mt-2">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" 
                                 style="width: {{ USER.b_tech_progress }}%" 
                                 id="researchProgress" 
                                 data-end-time="{{ USER.b_tech_end }}">
                                 {{ USER.b_tech_time_left }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            
            {% if shipyard_queue %}
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">{{ LNG.ov_shipyard }}</h4>
                </div>
                <div class="card-body">
                    <div class="shipyard-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>{{ shipyard_queue.name }}</span>
                            <span class="badge bg-primary">{{ shipyard_queue.amount }}</span>
                        </div>
                        <div class="progress mt-2">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" 
                                 style="width: {{ shipyard_queue.progress }}%" 
                                 id="shipyardProgress" 
                                 data-end-time="{{ shipyard_queue.end_time }}">
                                 {{ shipyard_queue.time_left }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">{{ LNG.ov_events }}</h4>
                </div>
                <div class="card-body">
                    <div class="notification-item">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-envelope-fill text-primary me-2 h4 mb-0"></i>
                            <span>{{ LNG.ov_messages }}</span>
                            <span class="badge bg-{{ notifyCount > 0 ? 'danger' : 'secondary' }} ms-auto">{{ notifyCount }}</span>
                        </div>
                        
                        {% if notifyCount > 0 %}
                        <div class="notifications-list">
                            {% for msgType, msgCount in messages %}
                                {% if msgCount > 0 %}
                                <div class="notification-subitem">
                                    <a href="game.php?page=messages&type={{ msgType }}" class="notification-link">
                                        <span>{{ LNG['mg_type'][msgType] }}</span>
                                        <span class="badge bg-primary float-end">{{ msgCount }}</span>
                                    </a>
                                </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                        {% else %}
                        <div class="text-center text-muted">{{ LNG.ov_no_messages }}</div>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            {% if teamspeakData and not teamspeakData.error %}
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">{{ LNG.ov_teamspeak }}</h4>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <p>{{ LNG.ov_teamspeak_connect|format(teamspeakData.url)|raw }}</p>
                        <p>{{ LNG.ov_teamspeak_status|format(teamspeakData.current, teamspeakData.max) }}</p>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>

