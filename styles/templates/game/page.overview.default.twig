{% extends "game_layout.twig" %}
{% extends "layout.game.twig" %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">{{ LNG.ov_planet }} "{{ planet.name }}"</h4>
                    <div>
                        {% if Moon %}
                        <a href="game.php?page=overview&amp;cp={{ Moon.id }}&amp;re=0" class="btn btn-sm btn-light" title="{{ LNG.ov_moon }}">{{ Moon.name }}</a>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-md-5 text-center py-3">
                            <img src="styles/theme/{{ userTheme }}/planeten/{{ planet.image }}.jpg" class="img-fluid planet-image" alt="{{ planet.name }}">
                            {% if buildInfo %}
                            <div class="mt-3 building-info">
                                {% for elementID, elementDetail in buildInfo.buildings %}
                                <div class="building-item">{{ LNG.tech[elementID] }}: {{ elementDetail.level|number_format }}</div>
                                {% endfor %}
                            </div>
                            {% endif %}
                        </div>
                        <div class="col-md-7">
                            <div class="p-3">
                                <h5>{{ LNG.ov_planet_info }}</h5>
                                <table class="table table-sm">
                                    <tr>
                                        <td>{{ LNG.ov_diameter }}:</td>
                                        <td>{{ planet.diameter|number_format }} {{ LNG.ov_distance_unit }}</td>
                                    </tr>
                                    <tr>
                                        <td>{{ LNG.ov_temperature }}:</td>
                                        <td>{{ LNG.ov_aprox }} {{ planet.temp_min }} {{ LNG.ov_temp_unit }} {{ LNG.ov_to }} {{ planet.temp_max }} {{ LNG.ov_temp_unit }}</td>
                                    </tr>
                                    <tr>
                                        <td>{{ LNG.ov_position }}:</td>
                                        <td>[{{ planet.galaxy }}:{{ planet.system }}:{{ planet.planet }}]</td>
                                    </tr>
                                    <tr>
                                        <td>{{ LNG.ov_points }}:</td>
                                        <td>{{ rankInfo.total_points|number_format }} ({{ LNG.ov_rank }} {{ rankInfo.total_rank|number_format }} {{ LNG.ov_of }} {{ rankInfo.total_rank_count|number_format }})</td>
                                    </tr>
                                    <tr>
                                        <td>{{ LNG.ov_fields }}:</td>
                                        <td>
                                            <div class="progress">
                                                {% set usedFieldsPercent = (planet.field_current / planet.field_max) * 100 %}
                                                <div class="progress-bar {{ usedFieldsPercent > 80 ? 'bg-danger' : (usedFieldsPercent > 60 ? 'bg-warning' : 'bg-success') }}" 
                                                     style="width: {{ usedFieldsPercent }}%">
                                                     {{ planet.field_current }} / {{ planet.field_max }}
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                                
                                <h5 class="mt-4">{{ LNG.ov_planet_actions }}</h5>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#renameModal">
                                        <i class="bi bi-pencil-square"></i> {{ LNG.ov_rename_planet }}
                                    </button>
                                    {% if planet.planet_type == 1 and planet.id_luna == 0 %}
                                    <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#createMoonModal">
                                        <i class="bi bi-moon-stars"></i> {{ LNG.ov_create_moon }}
                                    </button>
                                    {% endif %}
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deletePlanetModal">
                                        <i class="bi bi-trash"></i> {{ LNG.ov_delete_planet }}
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            {% if fleetTable.fleets %}
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">{{ LNG.ov_fleet }}</h4>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>{{ LNG.ov_fleet_mission }}</th>
                                <th>{{ LNG.ov_fleet_count }}</th>
                                <th>{{ LNG.ov_fleet_return }}</th>
                                <th>{{ LNG.ov_fleet_time }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for fleetID, fleetDetail in fleetTable.fleets %}
                            <tr>
                                <td>
                                    <span class="badge bg-{{ fleetDetail.mission_style }}">{{ fleetDetail.mission_name }}</span>
                                    {{ fleetDetail.mission_target }}
                                </td>
                                <td>{{ fleetDetail.fleet_amount }}</td>
                                <td>{{ fleetDetail.fleet_return ? LNG.ov_fleet_return_text : LNG.ov_fleet_departure }}</td>
                                <td>
                                    <div class="fleet-timer" data-fleet-time="{{ fleetDetail.fleet_end_time }}" data-fleet-id="{{ fleetID }}">
                                        {{ fleetDetail.fleet_arrival }}
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {% endif %}
            
            {% if news %}
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">{{ LNG.ov_news }}</h4>
                </div>
                <div class="card-body">
                    {{ news|raw }}
                </div>
            </div>
            {% endif %}
        </div>
        
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">{{ LNG.ov_server_time }}</h4>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <div class="h3" id="serverTime">{{ serverTime }}</div>
                        <div>{{ LNG.ov_time_online }}: {{ online_time }}</div>
                    </div>
                </div>
            </div>
            
            {% if planet.b_building %}
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">{{ LNG.ov_building }}</h4>
                </div>
                <div class="card-body">
                    <div class="construction-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>{{ planet.b_building_name }}</span>
                            <span class="badge bg-primary">{{ LNG.tech.level }} {{ planet.b_building_level }}</span>
                        </div>
                        <div class="progress mt-2">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" 
                                 style="width: {{ planet.b_building_progress }}%" 
                                 id="buildingProgress" 
                                 data-end-time="{{ planet.b_building_end }}">
                                 {{ planet.b_building_time_left }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            
            {% if USER.b_tech %}
