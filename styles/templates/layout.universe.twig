<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta name="description" content="{{ LNG.meta_descripton }}">
    <meta name="keywords" content="{{ LNG.meta_keywords }}">
    <meta name="author" content="{{ gameInformations.authors|raw }}">
    <meta name="robots" content="index, follow">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no, maximum-scale=1, minimum-scale=1">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:400,700">
    <title>{{ LNG.title }} - {{ title }}</title>
    <link rel="shortcut icon" href="./favicon.ico">
    <link rel="stylesheet" type="text/css" href="styles/resource/css/base/boilerplate.css?v={{ REV }}">
    <link rel="stylesheet" type="text/css" href="styles/resource/css/game/main.css?v={{ REV }}">
    <link rel="stylesheet" type="text/css" href="styles/resource/css/base/jquery.fancybox.css?v={{ REV }}">
    <link rel="stylesheet" type="text/css" href="styles/resource/css/base/jquery.qtip.css?v={{ REV }}">
    <link rel="stylesheet" type="text/css" href="styles/resource/css/base/normalize.css?v={{ REV }}">
    
    <link rel="stylesheet" type="text/css" href="{{ dpath }}style.css?v={{ REV }}">
    <link rel="stylesheet" type="text/css" href="styles/resource/css/uni.css?v={{ REV }}">
    
    {% for script in scripts %}
    <script type="text/javascript" src="scripts/{{ script }}.js?v={{ REV }}"></script>
    {% endfor %}
    
    <script type="text/javascript">
        var ServerTimezoneOffset = {{ Offset }};
        var serverTime = new Date({{ date[0] }}, {{ date[1] - 1 }}, {{ date[2] }}, {{ date[3] }}, {{ date[4] }}, {{ date[5] }});
        var startTime = serverTime.getTime();
        var localTime = serverTime;
        var localTS = startTime;
        var Gamename = "{{ gameName }}";
        var Ready = "{{ LNG.ready }}";
        var Skin = "{{ dpath }}";
        var Lang = "{{ lang }}";
        var head_info = "{{ LNG.fcm_info }}";
        var auth = "{{ userAuthlevel }}";
        var days = {{ LNG.week_day|json|raw }};
        var months = {{ LNG.months|json|raw }};
        var tdformat = "{{ LNG.js_tdformat }}";
        var queryString = "{{ queryString }}";
        var Path = "{{ path }}";
        var isPlayerCardActive = "{{ isPlayerCardActive }}";
        var externalAuth = "{{ externalAuth }}";
        
        setInterval(function() {
            serverTime.setSeconds(serverTime.getSeconds()+1);
        }, 1000);
    </script>
    {{ execscript|raw }}
</head>
<body id="{{ bodyclass }}" class="full">
    <div id="tooltip" class="tip"></div>
    <div id="body">
        <header>
            <div class="pageHeader"></div>
        </header>
        <div id="content">
            {% block content %}{% endblock %}
        </div>
        <footer>
            <div class="footer"></div>
        </footer>
    </div>
</body>
</html>
