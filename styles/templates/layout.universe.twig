                                    <li>
                                        <a class="dropdown-item {% if langKey == lang %}active{% endif %}" href="?lang={{ langKey }}">
                                            {{ langName }}
                                        </a>
                                    </li>
                                    {% endfor %}
                                </ul>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </header>
            
            <main class="login-content">
                <div class="container py-5">
                    {% block content %}{% endblock %}
                </div>
            </main>
            
            <footer class="login-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <p>
                                &copy; {{ game_name }} {{ "now"|date("Y") }}
